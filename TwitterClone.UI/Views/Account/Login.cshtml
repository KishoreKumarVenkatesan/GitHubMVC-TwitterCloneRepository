@using TwitterClone.UI.Models
@model LoginModel
@{
    ViewBag.MainTitle = "Welcome to My Twitter Clone";
    ViewBag.Title = "Log in";
}
@{
    var name = ViewBag.Error;
}
<h1>@ViewBag.MainTitle</h1>
<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.userId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.userId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.userId, string.Empty, new { @class = "text-danger" })
                        
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                       @Html.ValidationMessageFor(m => m.password, string.Empty, new { @class = "text-danger" })
                       
                    </div>
                </div>
         <label style="font-weight:bold;">   @ViewBag.Error</label>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    @Html.Label("New User?")
                    @Html.ActionLink("SignUp", "SignUp")
                </p>

                
            }
        </section>
    </div>
    
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}