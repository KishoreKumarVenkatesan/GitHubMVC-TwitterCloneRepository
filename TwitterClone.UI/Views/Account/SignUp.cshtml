@model TwitterClone.UI.Models.SignupModel

@{
    ViewBag.MainTitle = "Join My Twitter Clone";
    ViewBag.Title = "Your Details";
}
<h1>@ViewBag.MainTitle</h1>
<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { @id = "signupFormId", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.userId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.userId, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.fullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.fullName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
        </div>
    </div>
    
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Signup" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
